<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.solutions.friendy.BottomSheet.SwipeAroundFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/space10"
            android:padding="@dimen/space4"
            android:layout_marginBottom="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe Around The Globe"
                style="@style/headingText"
                android:textSize="@dimen/text18"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/space20"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/space150"
                android:layout_height="@dimen/space160">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/space2"
                    android:layout_width="@dimen/space50"
                    android:layout_height="@dimen/space50"
                    app:civ_border_color="@color/appColor"
                    app:civ_border_width="@dimen/space4"
                    android:src="@drawable/girl_1"/>

                <RelativeLayout
                    android:padding="@dimen/space2"
                    android:layout_margin="@dimen/space10"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:background="@color/appColor"
                    android:elevation="@dimen/space2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="@dimen/space5"
                        android:layout_centerVertical="true"
                        android:id="@+id/plane"
                        android:tint="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_paper_plane"/>

                    <LinearLayout
                        android:padding="@dimen/space2"
                        android:layout_marginLeft="@dimen/space5"
                        android:layout_toRightOf="@id/plane"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text14"
                            android:textColor="@android:color/white"
                            android:text="India"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text10"
                            android:textColor="@android:color/white"
                            android:text="My Location"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/space150"
                        android:layout_height="@dimen/space160"
                        app:riv_corner_radius="@dimen/space8"
                        android:src="@drawable/map"
                        android:scaleType="fitXY"/>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/text10"
                android:textSize="@dimen/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glob_note"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>