<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/alert_slider_layout"
    android:weightSum="8"

    >

    <ImageView
        android:id="@+id/alert_slider_imageView"
        android:layout_width="@dimen/space150"
        android:layout_height="@dimen/space150"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="4"
        />

    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text14"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:text="Facebook"
        />
    <TextView
        android:id="@+id/tv_alert_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text12"
        android:textColor="@color/white"
        android:text="Facebook was founded by Mark Zuckerberg"
        android:layout_weight="2"/>


</LinearLayout>