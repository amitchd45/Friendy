<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/space10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit"
                android:textColor="#000000"
                android:textSize="@dimen/text20"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tv_dob"
                android:layout_marginLeft="@dimen/space5"
                android:paddingLeft="@dimen/space5"
                android:paddingRight="@dimen/space10"
                android:paddingTop="@dimen/space4"
                android:paddingBottom="@dimen/space4"
                android:background="@drawable/ractangle_bg"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textHeading"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_bisexual"
                android:drawablePadding="@dimen/space2"
                android:text=""
                android:textColor="@android:color/white" />


        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/space10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 km, active just now"/>

        <View
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/lightGray" />

        <LinearLayout
            android:padding="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_title_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <RelativeLayout
                android:id="@+id/rl_about_me"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_icon_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_1"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_icon_about"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="@dimen/space5"
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text14"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_marginTop="@dimen/space5"
            android:layout_marginBottom="@dimen/space5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/lightGray" />

        <LinearLayout
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Information"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <RelativeLayout
                android:id="@+id/rl_industry"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_ic_industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_briefcase"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_ic_industry"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="@dimen/space5"
                        android:id="@+id/tv_industry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text14"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_company"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_ic_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_briefcase"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_ic_company"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="@dimen/space5"
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text14"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hometown"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_ic_hometown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_ic_hometown"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="@dimen/space5"
                        android:id="@+id/tv_hometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text14"
                        android:textAllCaps="false"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_marginTop="@dimen/space5"
            android:layout_marginBottom="@dimen/space5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/lightGray" />

        <LinearLayout
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_title_personality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Personality"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_personality"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image5"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:spanCount="3"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        android:id="@+id/rv_List_personality"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_marginTop="@dimen/space5"
            android:layout_marginBottom="@dimen/space5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/lightGray" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_tv_interest_title"
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Interests"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_interest_layout"
                tools:itemCount="3"/>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Interests"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <RelativeLayout
                android:id="@+id/rl_sport"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sport"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image21"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_music"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_music"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image31"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_food"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_food1"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image41"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_movie_and_tv"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image212"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_movie"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image212"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_book"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/appColor"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_image312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_book"/>

                <LinearLayout
                    android:layout_toRightOf="@id/iv_image312"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_marginTop="@dimen/space5"
            android:layout_marginBottom="@dimen/space5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/lightGray" />
        <LinearLayout
            android:layout_marginBottom="@dimen/space20"
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_note"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Note"
                android:textColor="@color/appColor"
                style="@style/headingText"/>

            <EditText
                android:visibility="gone"
                android:layout_margin="@dimen/space10"
                android:id="@+id/edit_query1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edite_text_bg_red"
                android:gravity="top|left"
                android:editable="false"
                android:textSize="@dimen/text14"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="6"
                android:padding="@dimen/space5"
                android:minLines="6"
                android:scrollbars="vertical" />

            <TextView
                android:padding="@dimen/space10"
                android:layout_margin="@dimen/space10"
                android:id="@+id/edit_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>