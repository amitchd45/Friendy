<?xml version=  "1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/text10"
        android:layout_margin="@dimen/space20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textSize="@dimen/text18"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_about"
            android:paddingLeft="@dimen/space5"
            android:textSize="@dimen/text14"
            android:layout_marginTop="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a sort description"
            android:background="@color/transparent"
            android:paddingTop="@dimen/space5"
            android:paddingBottom="@dimen/space5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/space20"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_margin="@dimen/space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/appColor"
                android:textSize="@dimen/text16"
                android:padding="@dimen/text10"/>

            <TextView
                android:id="@+id/btn_ok"
                android:layout_margin="@dimen/space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textColor="@color/appColor"
                android:textSize="@dimen/text16"
                android:padding="@dimen/text10"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>