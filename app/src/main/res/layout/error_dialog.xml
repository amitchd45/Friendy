<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/space30"
            android:layout_marginBottom="@dimen/text20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_marginRight="@dimen/space30"
            android:layout_marginLeft="@dimen/space30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No more crushes"
                android:textColor="@color/black"
                android:textSize="@dimen/text18"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="@dimen/text20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You already used up all your crushes!\nYou will get extra chances when receiving crushes."
                android:textSize="@dimen/text14"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_gotIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOT IT!"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:padding="@dimen/space10"
            android:layout_gravity="right"
            android:layout_margin="@dimen/space20"/>


    </LinearLayout>


</RelativeLayout>