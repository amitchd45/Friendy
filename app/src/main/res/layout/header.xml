<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/space10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/space130"
            android:layout_height="@dimen/space130"
            android:src="@drawable/ic_user_circle"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff" />

        <TextView
            android:id="@+id/tv_setName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            style="@style/headingText"
            android:textColor="@android:color/white"
            android:padding="@dimen/space10"/>

        <TextView
            android:padding="@dimen/space10"
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to view/Edit"
            android:textSize="@dimen/text14"
            style="@style/normalText"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_my_privileges"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginRight="@dimen/space30"
            android:layout_marginLeft="@dimen/space30"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bg"
            android:text="My Privileges"
            android:textColor="@color/appColor"
            android:elevation="@dimen/space3"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawableTint="@color/appColor"
            android:paddingTop="@dimen/space8"
            android:paddingBottom="@dimen/space8"/>


    </LinearLayout>

</LinearLayout>