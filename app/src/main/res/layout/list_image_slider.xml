<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_sale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/bg"
            app:riv_corner_radius_bottom_left="@dimen/space10"
            app:riv_corner_radius_bottom_right="@dimen/space10"
            app:riv_corner_radius_top_left="@dimen/space10"
            app:riv_corner_radius_top_right="@dimen/space10" />


        <ImageView
            android:padding="@dimen/space5"
            android:layout_marginRight="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            android:layout_alignBottom="@id/imageView_sale"
            android:layout_alignRight="@id/imageView_sale"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space40"
            android:tint="@color/appColor"
            android:src="@drawable/ic_favorite_black_24dp"/>

    </RelativeLayout>



</LinearLayout>