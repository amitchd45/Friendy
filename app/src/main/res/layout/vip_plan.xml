<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="@dimen/space10"
                android:paddingLeft="@dimen/space20"
                android:paddingRight="@dimen/space20"
                android:paddingBottom="@dimen/space15"
                android:paddingTop="@dimen/space5"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_close"
                    android:tint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_gravity="right"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_show_vip_plan"
                    tools:listitem="@layout/items_vip_plan"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>

                <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                    android:id="@+id/recyclerview_pager_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

<!--                <ImageView-->
<!--                    android:tint="@color/appColor"-->
<!--                    android:id="@+id/image"-->
<!--                    android:layout_width="@dimen/space70"-->
<!--                    android:layout_height="@dimen/space70"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:padding="@dimen/space10"-->
<!--                    android:background="@drawable/white_circle"-->
<!--                    android:src="@drawable/ic_favorite_black_24dp"-->
<!--                    android:scaleType="fitXY" />-->
<!--                <TextView-->
<!--                    android:padding="@dimen/space5"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Step-Up"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:textSize="@dimen/text16"/>-->

<!--                <TextView-->
<!--                    android:textColor="@color/white"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Get seen by 10x more people"-->
<!--                    android:textSize="@dimen/text12"/>-->


            </LinearLayout>

            <LinearLayout
                android:background="#ECEAEA"
                android:id="@+id/ll_main"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="150dp">



                <LinearLayout
                    android:id="@+id/ll_twelvemonth"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_bg"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingTop="@dimen/space2"
                        android:paddingBottom="@dimen/space2"
                        android:id="@+id/tv_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SAVE 41%"
                        android:textSize="@dimen/text14"
                        android:textColor="@android:color/white"
                        android:background="@drawable/text_bg"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:gravity="center"
                        android:padding="@dimen/space10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@color/appColor"
                            android:id="@+id/tv_twelve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            style="@style/textHeading"
                            android:textSize="18sp"/>


                        <TextView
                            android:id="@+id/tv_month_1"
                            android:layout_toRightOf="@id/tv_twelve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="months"
                            android:textSize="@dimen/text12"
                            android:layout_alignBottom="@id/tv_twelve"
                            android:textColor="@color/appColor"
                            style="@style/textSmall" />

                        <TextView
                            android:textColor="@color/appColor"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_money_mol"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/tv_twelve"
                            android:layout_height="wrap_content"
                            android:text="200/month"
                            style="@style/textHeading" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tv_money_mol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.2400"
                            android:textSize="@dimen/space10"
                            android:textColor="@color/appColor"
                            style="@style/textSmall" />



                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_threemonth"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_two"
                        android:paddingTop="@dimen/space2"
                        android:paddingBottom="@dimen/space2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SAVE 36%"
                        android:textSize="@dimen/text14"
                        android:textColor="@android:color/white"
                        android:background="@drawable/text_bg"
                        android:gravity="center"/>



                    <RelativeLayout
                        android:gravity="center"
                        android:padding="@dimen/space10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            style="@style/textHeading"
                            android:textSize="18sp"/>


                        <TextView
                            android:id="@+id/tv_month_2"
                            android:layout_toRightOf="@id/tv_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="months"
                            android:layout_alignBottom="@id/tv_three"
                            style="@style/textSmall" />

                        <TextView
                            android:textSize="@dimen/text10"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_money_mol_1"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/tv_three"
                            android:layout_height="wrap_content"
                            android:text="300/month"
                            style="@style/textHeading" />

                        <TextView
                            android:textSize="@dimen/text10"
                            android:id="@+id/tv_money_320"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tv_money_mol_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.900"
                            android:textColor="@color/darkgrey"
                            style="@style/textSmall" />



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_onemonth"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_one_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/textHeading"
                            android:textSize="18sp"/>


                        <TextView
                            android:id="@+id/tv_month_3"
                            android:layout_toRightOf="@id/tv_one_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="month"
                            android:layout_alignBottom="@id/tv_one_month"
                            style="@style/textSmall" />

                        <TextView
                            android:textSize="@dimen/text10"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_money_mol_3"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/tv_one_month"
                            android:layout_height="wrap_content"
                            android:text="500/month"
                            style="@style/textHeading" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_Step_continue_with_pay"
                android:layout_below="@id/ll_main"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginRight="@dimen/space20"
                android:layout_marginTop="@dimen/space20"
                android:layout_marginBottom="@dimen/space20"
                android:text="Continue"
                android:textAllCaps="false"
                android:background="@drawable/button_bg_1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>