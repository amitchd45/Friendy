<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.solutions.friendy.Fragments.PersonalInformationFragment">

    <include layout="@layout/topbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:background="@color/lightgrey"
                android:paddingVertical="15dp"
                android:layout_centerVertical="true"
                style="@style/textHeading" />


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@color/lightgrey"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_male"
                    android:drawableTint="@color/theme"
                    android:drawablePadding="10dp"
                    style="@style/textHeading"
                    android:gravity="center"
                    android:text="Gender"
                    android:textColor="@color/theme" />


                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Man"
                    android:layout_alignParentRight="true"
                    android:background="@color/lightgrey"
                    android:layout_centerVertical="true"
                    style="@style/textHeading" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_update_name"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="13dp"
                android:background="@color/lightgrey"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_id_card"
                    android:drawableTint="@color/theme"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme"
                    android:text="Full Name"
                    style="@style/textHeading" />


                <TextView
                    android:id="@+id/tv_show_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_alignParentRight="true"
                    android:background="@color/lightgrey"
                    android:layout_centerVertical="true"
                    style="@style/textHeading" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_update_dob"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="13dp"
                android:background="@color/lightgrey"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_birthday"
                    android:drawableTint="@color/theme"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme"
                    android:text="Birthday"
                    style="@style/textHeading" />


                <TextView
                    android:id="@+id/tv_show_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yyyy-dd-mm"
                    android:layout_alignParentRight="true"
                    android:background="@color/lightgrey"
                    android:layout_centerVertical="true"
                    style="@style/textHeading" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>