<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginBottom="@dimen/space10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"/>

                <LinearLayout
                    android:id="@+id/SliderDots"
                    android:layout_below="@+id/viewPager"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space10"
                android:layout_marginLeft="@dimen/space10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    style="@style/headingText"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_marginLeft="@dimen/space5"
                    android:paddingLeft="@dimen/space5"
                    android:paddingRight="@dimen/space10"
                    android:paddingTop="@dimen/space4"
                    android:paddingBottom="@dimen/space4"
                    android:background="@drawable/ractangle_bg"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textHeading"
                    android:drawableTint="@color/white"
                    android:drawableLeft="@drawable/ic_bisexual"
                    android:drawablePadding="@dimen/space2"
                    android:text=""
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/space10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 km, active just now" />

            <View
                android:layout_marginTop="@dimen/space10"
                android:layout_marginBottom="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />

            <LinearLayout
                android:padding="@dimen/space10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <RelativeLayout
                    android:id="@+id/rl_about_me"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_1" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image1"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="@dimen/space5"
                            android:id="@+id/tv_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="@dimen/text14"
                            android:text="N/A" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/space5"
                android:layout_marginBottom="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />

            <LinearLayout
                android:padding="@dimen/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Information"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <RelativeLayout
                    android:id="@+id/rl_industry"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_briefcase" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image2"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="@dimen/space5"
                            android:id="@+id/tv_industry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:text="N/A" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_company"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_briefcase" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image3"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="@dimen/space5"
                            android:id="@+id/tv_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:text="N/A" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_hometown"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image4"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="@dimen/space5"
                            android:id="@+id/tv_hometown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:text="N/A" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/space5"
                android:layout_marginBottom="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />

            <LinearLayout
                android:padding="@dimen/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Personality"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <RelativeLayout
                    android:id="@+id/rl_personality"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image5"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:spanCount="3"
                            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                            android:id="@+id/rv_List_personality" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/space5"
                android:layout_marginBottom="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />

            <LinearLayout
                android:padding="@dimen/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Interests"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_interest_layout"
                    tools:itemCount="3" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:padding="@dimen/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Interests"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <RelativeLayout
                    android:id="@+id/rl_sport"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sport" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image21"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_music"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_music" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image31"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_food"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_food1" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image41"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_movie_and_tv"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_movie" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image212"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_book"
                    android:paddingTop="@dimen/space5"
                    android:paddingBottom="@dimen/space5"
                    android:layout_marginTop="@dimen/space20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="@color/appColor"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_image312"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_book" />

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_image312"
                        android:layout_marginLeft="@dimen/space20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/space5"
                android:layout_marginBottom="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />


            <LinearLayout
                android:layout_marginBottom="@dimen/space20"
                android:padding="@dimen/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Note"
                    android:textColor="@color/appColor"
                    style="@style/headingText" />

                <EditText
                    android:visibility="gone"
                    android:layout_margin="@dimen/space10"
                    android:id="@+id/edit_query1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edite_text_bg_red"
                    android:gravity="top|left"
                    android:editable="false"
                    android:textSize="@dimen/text14"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:maxLines="6"
                    android:padding="@dimen/space5"
                    android:minLines="6"
                    android:scrollbars="vertical" />

                <TextView
                    android:padding="@dimen/space10"
                    android:layout_margin="@dimen/space10"
                    android:id="@+id/edit_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jfgjhfgfgg"
                    android:background="@drawable/edite_text_bg_red"
                    android:gravity="top|left" />

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/space5"
                android:layout_marginBottom="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:background="@color/lightGray" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/white"
        android:id="@+id/btn_close"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/space20" />

</RelativeLayout>