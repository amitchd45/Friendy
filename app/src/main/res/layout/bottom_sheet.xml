<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_top_round"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <LinearLayout
            android:layout_above="@id/btn_get_VIP"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space20" />

            <me.relex.circleindicator.CircleIndicator
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SliderDots1"
                android:layout_marginBottom="@dimen/space15"
                app:ci_drawable_unselected="@android:color/darker_gray"
                app:ci_drawable="@color/appColor" />


        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_get_VIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 139 Get VIP"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_1"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/space10"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:layout_marginTop="@dimen/space20" />
</RelativeLayout>